{
  "manifest_version": 3,
  "name": "Document Search",
  "version": "2.0",
  "description": "Advanced document search and navigation tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "file://*/*",
    "http://localhost:*/*",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PDF Search"
  },
  "options_page": "settings.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}